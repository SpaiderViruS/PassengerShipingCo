<UserControl x:Class="PassengerShipingCo.UserControls.ShipControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PassengerShipingCo.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="800" Loaded="UserControl_Loaded">
    <Border BorderBrush="Black" BorderThickness="3">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
            </Grid.ColumnDefinitions>

        <Image x:Name="ShipImage" Margin="5" Height="175" Width="175"/>

        <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Center">
            <Label x:Name="CaptainShipLabel"/>
            <Label x:Name="NameShipLabel"/>
            <Label x:Name="LoadCapacityLabel"/>
            <Label x:Name="SeatsLabel"/>
        </StackPanel>

    </Grid>
    </Border>
</UserControl>
