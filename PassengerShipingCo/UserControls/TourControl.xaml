<UserControl x:Class="PassengerShipingCo.UserControls.TourControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PassengerShipingCo.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="800" Loaded="UserControl_Loaded">
    <Border BorderBrush="Black" BorderThickness="3">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

            <Image x:Name="ShipImage" Margin="5" Height="175" Width="175"/>

            <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Label x:Name="DeparturePortLabel" FontSize="18"/>
            <Label x:Name="ArrivalPortLabel" FontSize="18"/>
            
            <Label x:Name="DepartureTimeLabel" FontSize="18"/>
            <Label x:Name="ArrivalTimeLabel" FontSize="18"/>

            <Label x:Name="TotalTimeInTravelLabel" FontSize="18"/>

            <Label x:Name="CostLabel" FontSize="18"/>
        </StackPanel>
        
    </Grid>
    </Border>
</UserControl>
